@using Productos
@using System.Reflection
@model List<Productos.Producto>
@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th> <th>Descripcion</th> <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Producto producto in @Model){
            <tr>
                <td>@producto.IdProducto</td> <td>@producto.Descripcion</td> <td>@producto.Precio</td> <td><a asp-controller="Productos" asp-action="Edit" asp-route-id="@producto.IdProducto" class="btn btn-warning">Editar</a></td> <td><a asp-controller="Productos" asp-action="Delete" asp-route-id="@producto.IdProducto" class="btn btn-danger">Borrar</a></td>
            </tr>
        }
    </tbody>
</table>